extends layout

block content
  body#contact
    #bg-opacity
      .container
        a.close-btn(href='/')  X
        h1 Contact Us
        p.p-3
          | Need to get in tough with us? Fill out the form with your inquiry
          br
          |           below.
        form
          // Name input
          .form-outline.mb-4
            input#form4Example1.form-control(type='text' placeholder='Name*')
          // Email input
          .form-outline.mb-4
            input#form4Example2.form-control(type='email' placeholder='Email*')
          // Message input
          .form-outline.mb-4
            textarea#form4Example3.form-control(rows='8' placeholder='Message*')
          // Submit button
          button.btn.btn-primary.btn-block.mb-4.py-2.cta-btn(type='submit')
            | Send
